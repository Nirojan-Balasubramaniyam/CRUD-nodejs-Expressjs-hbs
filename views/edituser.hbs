<h3>Edit Student Detail</h3>
{{#if message}}
  <div class="alert">{{message}}</div>
{{/if}}

{{#each rows}}
<form method="post" action="/edituser/{{this.ID}}">
  <div class="form-group">
    <label for="name">Name</label>
    <input type="text" name="name" value="{{this.Name}}"/>
  </div>

  <div class="form-group">
    <label for="age">Age</label>
    <input type="text" name="age" value="{{this.Age}}"/>
  </div>

  <div class="form-group">
    <label for="city">City</label>
    <input type="text" name="city" value="{{this.City}}"/>
  </div>

  <div class="form-group">
    <button class="editbtn" type="submit">Save Changes</button>
    <a href="/">View All</a>
  </div>
</form>
{{/each}}